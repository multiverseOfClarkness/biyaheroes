<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/profile.css">
    
    
    

    <!-- FILEPOND -->
    <link href="https://unpkg.com/filepond@^4/dist/filepond.css" rel="stylesheet" />
    <link
        href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css"
        rel="stylesheet"
    />
    <script defer src="https://unpkg.com/filepond-plugin-file-encode/dist/filepond-plugin-file-encode.js"></script>
    <script defer src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"></script>
    <script defer src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.js"></script>
    <script defer src="https://unpkg.com/filepond-plugin-image-crop/dist/filepond-plugin-image-crop.js"></script>
    <script defer src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>
    <script defer src="/js/editProfile.js"></script>
    
    
</head>

<body>

    <header>

        <nav class="navbar navbar-expand-md">
            <a href="/commuter/dashboard" class="navbar-brand"><h2>BiyaHeroes</h2></a>

            <button 
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#toggleMobileMenu"
            aria-controls="toggleMobileMenu"
            aria-expanded="false"
            aria-label="Toggle Navigation">
            
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="toggleMobileMenu">
                <ul class="navbar-nav ms-auto">

                    <li>
                        <a class="nav-link" href="/commuter/report/violation">Report a Violation</a>
                    </li>

                    <li>
                        <a class="nav-link" href="/commuter/report/missingItem">Report Missing Item</a>
                    </li>

                    <li class="history">
                        <a class="nav-link" href="/commuter/history/violation">History</a>

                        <ul>
                            <li><a href="/commuter/history/violation">Violations</a></li>
                            <li><a href="missing-item-history.html">Missing Item</a></li>
                        </ul>
                    </li>

                    <li>
                        <a class="nav-link" href="/commuter/fareCalculator">Fare Calculator</a>
                    </li>

                    <li>
                        <a class="nav-link active" href="/commuter/profile">Profile</a>
                    </li>

                    <li>
                        <a class="nav-link logout" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="banner">
            <h2>Profile</h2>
        </div>
    </header>


    <section class="container">
        <% userDetails.forEach(user =>{ %>
            <form onsubmit="return saveEdit()" action="/commuter/profile" method="post" >
                <div class="row my-5">
                    <div class="img-container col-md-4 d-flex flex-column align-items-center">
                        <h5>Profile Photo</h5>
                        
                        <input class="filepond" type="file" id="profile" name="profile">
                        
                        <img class="image-placehoder" id="profileImage" src="<%= user.profileImagePath %>" alt="">
                        
                        
                       
                        
                    </div>
        
                    <div class="col-md-8">
                        <div class="header">
                            <h5>Personal Information</h5>
                            <button type="button" class="btn btn-primary" id="edit">Edit</button>
                        
                        </div>
                         
                        <div class="profile-item">
                            <label for="">First Name:</label>
                            <input type="text" name="firstName" id="firstName" placeholder="<%= user.fname %> " readonly class="form-control">
                            <small id="small" class="form-text">Error Message</small>
                        </div>
                        <div class="profile-item">
                            <label for="">Last Name:</label>
                            <input type="text" name="lastName" id="lastName" placeholder="<%= user.lname %> " readonly class="form-control">
                            <small id="small" class="form-text">Error Message</small>
                        </div>
        
                        <div class="profile-item">
                            <label for="">Address:</label>
                            <input type="text" name="address" id="address" placeholder="<%= user.address %> " readonly class="form-control">
                            <small id="small" class="form-text">Error Message</small>
                        </div>
        
                        <div class="profile-item">
                            <label for="">Birthday:</label>
                            <input type="text" name="birthday" id="birthday" placeholder="<%= formattedDate %> " readonly class="form-control">
                            <small id="small" class="form-text">Error Message</small>
                        </div>
                        
                        <div class="header">
                            <h5>Account Information</h5>
                        </div>
        
                        <div class="profile-item">
                            <label for="">Contact Number:</label>
                            <input type="number" name="phoneNum" id="phoneNum" placeholder="<%= user.phone %> " readonly class="form-control">
                            <small id="small" class="form-text">Error Message</small>
                        </div>
        
                        <div class="profile-item">
                            <label for="">Email:</label>
                            <input type="email" name="email" id="email" placeholder="<%= user.email %> " readonly class="form-control">
                            <small id="small" class="form-text">Error Message</small>
                        </div>

                    
                        <button type="submit" class="btn btn-outline-success" id="save">Save</button>
                        <button type="reset"  onClick="window.location.reload(true)" class="btn btn-outline-danger" id="cancel">Cancel</button>
                    </div>
                </div>
                <input id="dataUrl" type="text" value="<%= user.profileImagePath %> ">
            <% }) %> 
            </form>
            <a href="/commuter/change-pass">
                Change password?
            </a>
            
    </section>

    <footer>
        <p>Commuters' Reports Management System</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
    
    
    
    
</body>
</html>