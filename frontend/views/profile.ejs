<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EDIT-PROFILE</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/admin-profile.css">
    <link rel="stylesheet" href="/css/admin-typography.css">
    <link rel="stylesheet" href="/css/edit-profile.css">
    <link rel="stylesheet" href="/css/admin-common.css">
  </head>

<body>
    <nav class="navbar fixed-top navbar-light header" style="background-color: #0d3f62;">
        <div class="container-fluid justify-content-center">
            <div class="d-flex flex-row">
                <!-- <a href="/complaint/complaint.html">
                    <img class="back-icon my-2 justify-content-start" src="img/back-icon.png">
                </a> -->
                <a class="navbar-brand" href="/admin/dashboard" style="color: white ;">
                    BIYAHEROES
                </a>
            </div>
        </div>
    </nav>

    <section class="container pt-5">

        <div class="row my-5">
            <div class="col-md-4 d-flex flex-column align-items-center">
                <h5>Profile Photo</h5>

                <div id="profile-photo-placement" class="mb-3">
                    <img id="output" width="140">
                </div>
                <input type="file" id="profile-photo" onchange="loadFile(event)" accept="image/*" name="image">
                <button class="btn btn-primary"><label for="profile-photo">Upload Photo</label></button>
            </div>

            <div class="col-md-8">
                <div class="header">
                    <h5>Personal Information</h5>
                    <small id="edit" class="">Edit</small>
                </div>

                <div class="profile-item">
                    <input type="text" name="full-name" id="full-name" placeholder="Full Name" readonly class="form-control">
                    <small class="form-text">Error Message</small>
                </div>

                <div class="profile-item">
                    <input type="text" name="role" id="role" placeholder="Role" readonly class="form-control">
                    <small class="form-text">Error Message</small>
                </div>
                
                <div class="header">
                    <h5>Account Information</h5>
                </div>

                <div class="profile-item">
                    <input type="email" name="email" id="email" placeholder="Email" readonly class="form-control">
                    <small class="form-text">Error Message</small>
                </div>

                <div class="profile-item">
                    <input type="password" name="password" id="password" placeholder="Password" class="form-control" readonly>
                    <small class="form-text">Error Message</small>
                </div>
            
                <button class="btn btn-outline-success" id="save">Save</button>
                <button class="btn btn-outline-danger" id="cancel">Cancel</button>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
    <script src="js/profile.js"></script>
    <script src="js/picture.js"></script>
</body>
</html>