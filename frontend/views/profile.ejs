<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EDIT-PROFILE</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/admin-profile.css">
    <link rel="stylesheet" href="/css/admin-typography.css">
    <link rel="stylesheet" href="/css/edit-profile.css">
    <link rel="stylesheet" href="/css/admin-common.css">
    <!-- FILEPOND -->
    <link href="https://unpkg.com/filepond@^4/dist/filepond.css" rel="stylesheet" />
    <link
        href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css"
        rel="stylesheet"
    />
    
    <script defer src="https://unpkg.com/filepond-plugin-file-encode/dist/filepond-plugin-file-encode.js"></script>
    <script defer src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"></script>
    <script defer src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.js"></script>
    <script defer src="https://unpkg.com/filepond-plugin-image-crop/dist/filepond-plugin-image-crop.js"></script>
    <script defer src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>
    <script defer src="/js/profile.js"></script>
  </head>

<body>
    <nav class="navbar fixed-top navbar-light header" style="background-color: #0d3f62;">
        <div class="container-fluid justify-content-center">
            <div class="d-flex flex-row">
                <!-- <a href="/complaint/complaint.html">
                    <img class="back-icon my-2 justify-content-start" src="img/back-icon.png">
                </a> -->
                <a class="navbar-brand" href="/admin/dashboard" style="color: white ;">
                    BIYAHEROES
                </a>
            </div>
        </div>
    </nav>

    <section class="container pt-5">
        <% adminDetails.forEach(admin =>{ %> 
        <form onsubmit="return saveEdit()" action="/admin/profile" method="post">
            <div class="row my-5">
                <div class="col-md-4 d-flex flex-column align-items-center">
                    <h5>Profile Photo</h5>
    
                    <input class="filepond" type="file" id="profile" name="profile">
                    
                </div>
    
                <div class="col-md-8">
                    <div class="header">
                        <h5>Personal Information</h5>
                        <small id="edit" class="">Edit</small>
                    </div>
    
                    <div class="profile-item">
                        <label for="">Fullname</label>
                        <input type="text" name="fullname" id="full-name" placeholder="<%= admin.fullname %> " readonly class="form-control">
                        <small class="form-text">Error Message</small>
                    </div>
    
                    <div class="profile-item">
                        <label for="">Role</label>
                        <input type="text" name="role" id="role" placeholder="<%= admin.role %> " readonly class="form-control">
                        <small class="form-text">Error Message</small>
                    </div>
                    
                    <div class="header">
                        <h5>Account Information</h5>
                    </div>
    
                    <div class="profile-item">
                        <label for="">Email</label>
                        <input type="email" name="email" id="email" placeholder="<%= admin.email %> " readonly class="form-control">
                        <small class="form-text">Error Message</small>
                    </div>
    
                
                    <button type="submit" class="btn btn-outline-success" id="save">Save</button>
                    <button type="reset" onClick="window.location.reload(true)" class="btn btn-outline-danger" id="cancel">Cancel</button>
                </div>
            </div>
            <input class="dataUrl" id="dataUrl" value="<%=admin.profileImagePath%>">
            <a href="/commuter/change-pass">
                Change password?
            </a>
        </form>
        
        <% }) %> 

        
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
    
</body>
</html>