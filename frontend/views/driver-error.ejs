                                                </li>
                                            </ul>
                                    </div>
                                    <!-- account menu block end -->
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col pending-list">
                    <div class="d-lg-flex">
                        <h5 class="text-lg-start text-center my-2">LIST OF DRIVERS</h5>

                        <div class="d-flex justify-content-lg-end justify-content-md-center search-bar">
                            <form class="form-inline my-2 my-lg-2 search-form" style="width: 200px;">
                                <input type="text" placeholder="Search" id="myInput" onkeyup='tableSearch()' class="form-control">
                            </form>
                            <img class="search-icon my-3" src="/images/search-icon.png">
                        </div>
                    </div>

                    <!-- sample list start -->
                    <div class="table-responsive-md toda-page">
                        <table class="table table-hover overdue-report" id="myTable-th" data-filter-control="true" data-show-search-clear-button="true">
                            <thead class="left-details">
                                <tr>
                                    <th>TODA NAME</th>
                                    <th>DRIVER NAME</th>
                                    <th>BODY NUMBER</th>
                                    <th class="delete">REMOVE</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% driverList.forEach(driver =>{ %> 
                                    <tr>
                                        <td class="input-data" id="toda-name"><%= driver.TODA %> </td>
                                        <td class="input-data" id="driver-name"><%= driver.driverName %></td>
                                        <td class="input-data" id="body-no"><%= driver.bodyNum %></td>
                                        <td class="delete-icon">
                                            <form method="post" action="/admin/drivers/<%= driver._id %>?_method=DELETE">
                                                <button type="submit">
                                                    <img class="delete-icon" id="delete-icn" src="/images/delete-icon.png">
                                                </button>
                                                
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %> 
                                
                            </tbody>
                        </table>
                        <!-- sample report end -->
                        <form action="/admin/drivers/new" method="post" >
                            <div class="input-group mb-3 pe-5 mx-2" id="new-input">
                           
                                    <label class="input-group-text" for="inputGroupSelect01">TODA NAME</label>
                                    <select class="form-select" name="TODA" id="inputGroupSelect01">
                                        
                                        <option value="San Francisco" id="1">San Francisco</option>
                                        <option value="Dela Paz" id="2">Dela Paz</option>
                                        <option value="Malaban" id="3">Malaban</option>
                                    </select>
                                    <input type="text" class="form-control" placeholder="Body No" id="input-body-no" name="bodyNum">
                                
                                    <input type="text" class="form-control" placeholder="Driver's Name" id="input-driver-name" name="driverName">
                                
                                    <input type="text" class="form-control" placeholder="Contact number" id="input-driver-contact" name="phone">
                                
                                <button type="submit" class="btn btn-outline-dark mx-1" id="save" style="height: 38px;">save</button>
                            </div>
                        </form>
                        
                        <form action="/admin/drivers" method="post" enctype="multipart/form-data" id="excel-upload">
                        <div class="d-flex flex-row-reverse">   

                            <button class="btn btn-light  me-md-2 border border-secondary text-center btn-options" type="button" onclick="showInputForm()" id="new-btn">ADD</button>
                            <button form="excel-upload" type="submit" class="btn btn-light  me-md-2 border border-secondary btn-options upload" value="Submit" id="submitUpload">Uploadd</button>
                            <button class="btn btn-light  me-md-2 border border-secondary btn-options upload" type="button" id="showUpload">Upload</button>
                            <input type="file" class="upload-excel border border-secondary form-control mb-3" name="excel" id="excel">    
                            
                        </div>
                        </form> 
                        
                    </div>
                </div>
            </div>
            
        </div>
       
