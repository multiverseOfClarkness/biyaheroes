<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SOLVED MISSING REPORT</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    
    <link rel="stylesheet" href="/css/admin-typography.css">
    <link rel="stylesheet" href="/css/admin-common.css">
    <link rel="stylesheet" href="/css/missing-solved-report.css">
  </head>

  <body>
    <nav class="navbar fixed-top navbar-light header" style="background-color: #0d3f62;">
        <div class="container-fluid">
            <div class="d-flex flex-row">
                <a href="/admin/missing/solved">
                    <img class="back-icon" src="/images/back-icon.png" id="back-icon">
                </a>
                <a class="navbar-brand" href="/admin/dashboard" style="color: white ;">
                    BIYAHEROES
                </a>
            </div>
        </div>
    </nav>
<% missingReportData.forEach(missing => { %> 
    <div class="container rounded-3">
        <div class="wrapper pt-3">
            <div class="">
                <div class="">
                    <div class="upper-detail mx-4">
                        <div class="d-flex flex-row-reverse">
                            <button type="button" class="btn btn-primary btn-sm my-2" onclick="" id="dl-btn" download>Download</button>
                        </div>
                        <div class="d-flex flex-row justify-content-lg-start justify-content-sm-center">
                            <h3>Report ID: </h3>
                            <h3 id="report-no" class="mx-1"><%= missing.id %></h3>
                        </div>
                        <div class="d-flex flex-row">
                            <small>Complainant:</small>
                            <small id="complainant" class="mx-1"><%= missing.author.fname %> <%= missing.author.lname %></small> <br>
                        </div>
                        <div class="d-flex flex-row">
                            <small>Contact No:</small>
                            <small id="contact" class="mx-1"><%= missing.author.phone %></small> <br>
                        </div>
                        <div class="d-flex flex-row">
                            <small>Submitted:</small>
                            <small id="submission-date" class="mx-1"><%= missing.createdAt %> </small> <br>
                        </div>          
                    </div>
                    
        

                </div>
            </div>
            <hr class="report-hr">

                
                    <div class="row pt-3">
                        <div class="col-lg-6 col-md-12">
                            <div class="driver-info mx-4">
                                <h3>DRIVER'S INFORMATION</h3>
            
                                <div class="driver-detail">
                                    <div class="d-flex flex-row">
                                        <h6 class="name">NAME:</h6>
                                        <h6 id="driver-name" class="mx-2 data-value"><%= missing.driverName %></h6>
                                    </div>
                                    <div class="d-flex flex-row">
                                        <h6 class="toda-name">TODA:</h6>
                                        <h6 id="toda-name" class="mx-2 data-value"><%= missing.TODA %></h6>
                                    </div>
                                    <div class="d-flex flex-row">
                                        <h6 class="body-no">BODY/PLATE #:</h6>
                                        <h6 id="body-no" class="mx-1 data-value"><%= missing.bodyNum %></h6>
                                    </div>
                                </div>
                            </div>
                            <hr class="col6">
                        </div>
                        
                        <div class="d-flex row vr d-none d-lg-block"></div>

                        <div class="col-lg-6 col-md-12">
                            <div class="incident-info mx-4">
                                <h3>ITEM INFORMATION</h3>
        
                                <div class="incident-detail">
                                    <div class="d-flex flex-row">
                                        <h6 class="violation">ITEM:</h6>
                                        <h6 id="violation" class="mx-2"><%= missing.itemType %></h6>
                                    </div>

                                    <div class="d-flex flex-row">
                                        <h6 class="date">Date of Incident:</h6>
                                        <h6 id="incident-date" class="mx-2 pb-4"><%= missing.dateOfIncident %></h6>
                                    </div>
                                </div>
                            </div>
                            <hr class="col6">
                        </div>
                    </div>
                

           

            <button type="button" class="btn btn-outline-dark btn-sm my-2" id="proof-btn" onclick="displayImage()">Click to view submitted proof</button>
            <h6 id="proof-text" class="prooftxt my-2 mx-4">SUBMITTED PROOF</h6>
            <img src="<%= missing.evidenceImagePath %> " id="proof" class="my-3"> 
            
            <div class="d-flex flex-column justify-content-center case-closed mx-4 mb-5  badge bg-secondary text-wrap" style="width: auto;">
                <h6 class="mx-5 justify-content-center">CASE CLOSED</h6>
                <h3 class="justify-content-center" id="closed-date"><%= missing.updatedAt %></h3>
            </div>
        </div>
    </div>
<% }) %> 
    

    
    <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
    integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
    crossorigin="anonymous"
    ></script>
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js" integrity="sha512-qZvrmS2ekKPF2mSznTQsxqPgnpkI4DNTlrdUmTzrDgektczlKNRRhy5X5AAOnx5S09ydFYWWNSfcEqDTTHgtNA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.debug.js"></script>
    <script src="/js/display-submitted-proof.js"></script>
    
  </body>

</html>