                                    <!-- main menu block end -->

                                    <!-- account menu block start -->
                                    <div class="account-navigation pb-5">
                                        <hr>
                                            <ul class="navbar-nav d-flex flex-column mx-3 pb-5">
                                                <li>
                                                    <a href="/admin/newAdmin" class="nav-link active text-white">ADD MEMBER</a>
                                                </li>
                            
                                                <li>
                                                    <a href="/admin/profile" class="nav-link text-white">EDIT PROFILE</a>
                                                </li>
                            
                                                <li>
                                                    <a href="/logout" class="nav-link text-white log-out">LOG OUT</a>
                                                </li>
                                            </ul>
                                    </div>
                                    <!-- account menu block end -->
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col pending-list">
                    <div class="d-lg-flex">
                        <h5 class="text-lg-start text-center my-2">SOLVED MISSING REPORT LIST</h5>

                        <div class="d-flex justify-content-lg-end justify-content-md-center search-bar sbar">
                            <form class="form-inline my-2 my-lg-2 search-form" style="width: 200px;">
                                <input type="text" placeholder="Search" id="myInput" onkeyup='tableSearch()' class="form-control fcontrol">
                            </form>
                            <img class="search-icon my-3" id="search-icon" src="/images/search-icon.png">
                        </div>
                    </div>

                    <!-- sample report start -->
                    <div class="table-responsive-md pending-page">
                        <!-- sample report start -->
                        <table class="table table-hover overdue-report" id="myTable-th" data-filter-control="true" data-show-search-clear-button="true">
                            <thead>
                                <tr>
                                    <th data-column="reportNo" data-order="desc">REPORT # </th>
                                    <th data-column="complainant" data-order="desc">REPORTER</th>
                                    <th data-column="todaName" data-order="desc">TODA </th>
                                    <th data-column="bodyNo" data-order="desc">BODY NO</th>
                                    <th data-column="view" data-order="desc">VIEW</th>
                                </tr>
                            </thead>    
                             
                                <tbody id="myTable">
                                    <% missingReportsList.forEach(missing => { %>  
                                        <tr>
                                            <td id="report-no"><%= missing._id %> </td>
                                            <td class="complainant-name-data" id="complainant"><%= missing.author.fname %> </td>
                                            <td class="toda-data" id="toda-name"><%= missing.TODA %> </td>
                                            <td class="body-no-data" id="body-no"><%= missing.bodyNum %> </td>
                                            <td class="view">
                                                <a href="/admin/missing/solved/<%= missing.id %> ">
                                                    <button class="btn btn-outline-dark btn-sm view-btn">View</button>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>  
                                </tbody>
                        </table>
                        <!-- sample report end -->
                </div>
            </div>
        </div>
    </nav>

    <script
