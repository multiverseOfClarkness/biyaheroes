                <div class="col pending-list">
                    <div class="d-lg-flex">
                        <h5 class="text-lg-start text-center my-2">ADD MEMBERS</h5>

                        <div class="d-flex justify-content-lg-end justify-content-md-center search-bar">
                            <form class="form-inline my-2 my-lg-2 search-form" style="width: 200px;">
                                <input type="text" placeholder="Search" id="myInput" onkeyup='tableSearch()' class="form-control">
                            </form>
                            <img class="search-icon my-3" src="/images/search-icon.png">
                        </div>
                    </div>

                    <!-- sample list start -->
                    <div class="table-responsive-md toda-page">
                        <table class="table table-hover overdue-report" id="myTable-th" data-filter-control="true" data-show-search-clear-button="true">
                            <thead class="left-details">
                                <tr>
                                    <th>ROLE</th>
                                    <th>MEMBER NAME</th>
                                    <th>EMAIL</th>
                                    <th class="delete">REMOVE</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% adminList.forEach(admin => { %>  
                                <tr>
                                
                                    <td class="input-data" id="role"><%= admin.role %> </td>
                                    <td class="input-data" id="member-name"><%= admin.fullname %> </td>
                                    <td class="input-data" id="member-email"><%= admin.email %> </td>
                                    <td class="delete-icon">
                                    <form method="post" action="/admin/newAdmin/<%= admin.id %>?_method=PATCH ">
                                        <button type="submit">
                                            <img class="delete-icon" id="delete-icn" src="/images/delete-icon.png">
                                        </button>
                                    </form>
                                </td>
                                
                                
                                </tr>
                                <% }) %>  
                            </tbody>
                        </table>
                        <!-- sample report end -->

                        <div class="input-group mb-3 pe-5 mx-2" id="new-input">
                            <form action="/admin/newAdmin" method="post">
                            <!-- <span class="input-group-text" id="basic-addon1">ENTER</span> -->
                            <!-- <span class="input-group-text" id="basic-addon1">ENTER</span> -->
                            <input type="text" class="form-control" placeholder="Member Role" aria-label="role" aria-describedby="basic-addon1" name="adminRole" id="adminRole">

                            <input type="text" class="form-control" placeholder="Member Name" aria-label="member-name" aria-describedby="basic-addon1" name="adminName" id="adminName">

                            <input type="text" class="form-control" placeholder="Email" aria-label="email" aria-describedby="basic-addon1" name="adminEmail" id="adminEmail">

                            <input type="password" class="form-control" placeholder="Password" aria-label="password" aria-describedby="basic-addon1" name="adminPassword" id="adminPassword">

                            <button type="submit" class="btn btn-outline-dark mx-1" id="save" style="height: 38px;">save</button>
                            </form>
                            
                        </div>

                        <div class="d-flex flex-row-reverse">                     
                            <button class="btn btn-light  me-md-2 border border-secondary text-center btn-options" type="button" onclick="showInputForm()" id="new-btn">ADD</button>
                        </div>
