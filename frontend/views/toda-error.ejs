                        class="navbar-toggler my-2 mx-2 collapse-button" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#toggleMobileMenu" 
                        aria-controls="toggleMobileMenu" 
                        aria-expanded="false" 
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        </button>

                    <div class="collapse navbar-collapse" id="toggleMobileMenu">
                        <div class="sidebar-menu">
                            <div class="navbar-nav account-box">
                                <div class="row">

                                    <!-- account block start-->
                                    <div class="">
                                        <h3 class="logo mx-2 my-1">BIYAHEROES</h3>
                                    </div>
                                        

                                    <!-- main menu block start -->
                                    <div class="main-menu pb-3">
                                        <hr>
                                        <ul class="navbar-nav d-flex flex-column mx-3 mt-lg-0 main-menu-list" style="color: white">
                                            <li>
                                                <a href="/admin/complaints" class="nav-link text-white link">COMPLAINT</a>
                                            </li>
                        
                                            <li>
                                                <a href="/admin/missing" class="nav-link text-white link">MISSING</a>
                                            </li>
                        
                                            <li>
                                                <a href="/admin/TODA" class="nav-link nav-pills link active" aria-current="true">TODA</a>
                                            </li>
                        
                                            <li>
                                                <a href="/admin/drivers" class="nav-link text-white link">DRIVER</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <!-- main menu block end -->

                                    <!-- account menu block start -->
                                    <div class="account-navigation pb-5">
                                        <hr>
                                            <ul class="navbar-nav d-flex flex-column mx-3 pb-5">
                                                <li>
                                                    <a href="/admin/newAdmin" class="nav-link active text-white">ADD MEMBER</a>
                                                </li>
                            
                                                <li>
                                                    <a href="/admin/profile" class="nav-link text-white">EDIT PROFILE</a>
                                                </li>
                            
                                                <li>
                                                    <a href="/logout" class="nav-link text-white log-out">LOG OUT</a>
                                                </li>
                                            </ul>
                                    </div>
                                    <!-- account menu block end -->
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col pending-list">
                    <div class="d-lg-flex">
                        <h5 class="text-lg-start text-center my-2">TODA PRESIDENTS</h5>

                        <div class="d-flex justify-content-lg-end justify-content-md-center search-bar">
                            <form class="form-inline my-2 my-lg-2 search-form" style="width: 200px;">
                                <input type="text" placeholder="Search" id="myInput" onkeyup='tableSearch()' class="form-control">
                            </form>
                            <img class="search-icon my-3" src="/images/search-icon.png">
                        </div>
                    </div>

                    <!-- sample list start -->
                    <div class="table-responsive-md toda-page">
                        <table class="table table-hover overdue-report" id="myTable-th" data-filter-control="true" data-show-search-clear-button="true">
                            <thead class="left-details">
                                <tr>
                                    <th scope="col" id="toda">TODA NAME</th>
                                    <th scope="col" class="president-name" contenteditable="false">PRESIDENT'S NAME</th>
                                    <th scope="col" class="delete" id="delete">REMOVE</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% todaList.forEach(toda =>{ %> 
                                <tr>
                                    <td scope="row" class="input-data" id="toda-name"><%= toda.TODA %> </td>
                                    <td class="input-data" id="president-name"><%= toda.presidentName %> </td>
                                    <td class="delete-icon">
                                        <form method="post" action="/admin/TODA/<%= toda._id %>?_method=DELETE">
                                            <button type="submit">
                                                <img class="delete-icon" id="delete-icn" src="/images/delete-icon.png">
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %> 
                                
                            </tbody>
                        </table>
                        <!-- sample report end -->
                        <form action="/admin/TODA/new" method="post">
                            <div class="input-group mb-3 pe-5 mx-2" id="new-input">
                                
                                <label class="input-group-text" for="inputGroupSelect01">TODA NAME</label>
                                    <select class="form-select" name="TODA" id="inputGroupSelect01">
                                        <option value="San Francisco" id="1">San Francisco</option>
                                        <option value="Dela Paz" id="2">Dela Paz</option>
                                        <option value="Malaban" id="3">Malaban</option>
                                    </select>
                                <input type="text" class="form-control" placeholder="President Name" name="president" id="input-pres-name">
                                <button type="submit" class="btn btn-outline-dark mx-1" id="save" style="height: 38px;">save</button>
                            </div>
                        </form>
                        
                        <form action="/admin/TODA" method="post" enctype="multipart/form-data">
                        <div class="d-flex flex-row-reverse">    

                            <button class="btn btn-light  me-md-2 border border-secondary text-center btn-options" type="button" onclick="showInputForm()" id="new-btn">ADD</button>
                            <button type="submit" class="btn btn-light  me-md-2 border border-secondary btn-options upload" value="Submit" id="submitUpload">Uploadd</button>
                            <button class="btn btn-light  me-md-2 border border-secondary btn-options upload" type="button" id="showUpload">Upload</button>
                            <input type="file" class="upload-excel border border-secondary form-control mb-3" name="excel" id="excel">    

                            
                        </div>
                        </form>
                       
                        
                    </div>
            </div>
        </div>
    </nav>
    <div id="popup" class="popup">
        <img src="/images/error.png">
        <h2>Error</h2>
        <p>Duplicate entries detected.</p>
        <button onclick=closepopup() type="button">OK</button>
    </div>
