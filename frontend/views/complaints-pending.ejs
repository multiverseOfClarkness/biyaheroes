                <div class="col pending-list">
                    <div class="d-lg-flex">
                        <h5 class="text-lg-start text-center my-2">PENDING COMPLAINT REPORT LIST</h5>

                        <div class="d-flex justify-content-lg-end justify-content-md-center search-bar">
                            <form class="form-inline my-2 my-lg-2 search-form" style="width: 200px;">
                                <input type="text" placeholder="Search" id="myInput" onkeyup='tableSearch()' class="form-control">
                            </form>
                            <img class="search-icon my-3" src="/images/search-icon.png">
                        </div>
                    </div>

                    <div class="table-responsive-md overdue-page">
                        <!-- sample report start -->
                        <table class="table table-hover overdue-report" id="myTable-th" data-filter-control="true" data-show-search-clear-button="true">
                            <thead>
                                <tr>
                                    <th data-column="reportNo" data-order="desc">REPORT ID</th>
                                    <th data-column="complainant" data-order="desc">COMPLAINANT </th>
                                    <th data-column="todaName" data-order="desc">TODA </th>
                                    <th data-column="bodyNo" data-order="desc">BODY NO</th>
                                    <th data-column="view" data-order="desc">ACTION</th>
                                </tr>
                            </thead>   
        
                                <tbody id="myTable">
                                <tr>
                                    <% violationList.forEach(violation => { %>  
                                        <tr>
                                            <td id="report-no"><%= violation.id %></td>
                                            <td class="complainant-name-data" id="complainant"><%= violation.author.fname %> </td>
                                            <td class="toda-data" id="toda-name"><%= violation.TODA %> </td>
                                            <td class="body-no-data" id="body-no"><%= violation.bodyNum %> </td>
                                            <td class="view">
                                                <a href="complaint-pending-report.html">
                                                    <button class="btn btn-outline-dark btn-sm view-btn">View</button>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>   
                                </tr>
                                </tbody>
                        </table>
                    </div>
                </div>
                        <!-- sample report end -->
